{
  "template": {
    "prefix": "template",
    "description": "\"template of perl script\"",
    "body": [
      "#!/usr/bin/perl",
      "# pragmas",
      "use strict;",
      "use warnings;",
      "# end pragmas",
      "",
      "# standard modules",
      "use Getopt::Long qw/GetOptionsFromArray/;",
      "use Pod::Usage;",
      "# end standard modules",
      "",
      "# documentations",
      "=head1 NAME",
      "",
      "B<${VIM:Filename( \"$1.pl\" )}> - ${1:<brief description of program>}",
      "",
      "=head1 SYNOPSIS",
      "",
      "\t${VIM:Filename( \"$1.pl\" )} [options]$2",
      "",
      "=head1 OPTIONS",
      "",
      "=over",
      "",
      "=item I<-h>",
      "",
      "print brief help message",
      "",
      "=item I<--help>",
      "",
      "print this help message",
      "",
      "=back",
      "",
      "=cut",
      "# end documentations",
      "",
      "sub main;",
      "",
      "main( @ARGV );",
      "",
      "sub main",
      "{",
      "\tmy @argv = @_;",
      "",
      "\tGetOptionsFromArray\t( \\@argv,$3",
      "\t\t\t\t\t\t\t\t\t\t\t\t'h'    => sub { pod2usage()    },",
      "\t\t\t\t\t\t\t\t\t\t\t\t'help' => sub { pod2usage( 1 ) },",
      "\t\t\t\t\t\t\t\t\t\t\t) or die \"Invalid Option\";",
      "",
      "\t$0",
      "}"
    ]
  }
}

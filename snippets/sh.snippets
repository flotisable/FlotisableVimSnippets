# basic structure
snippet #! "shebang"
	#!/bin/bash

# basic syntax
snippet if "if control flow"
	if [${1:<condition>}]; then
		${0:{VISUAL}}
	fi

snippet while "while control flow"
	while [${1:<condition>}]; do
		${0:{VISUAL}}
	done

snippet for "for control flow"
	for ${1:<var>} in ${2:<list>}; do
		${0:{VISUAL}}
	done

snippet func "function"
	${1:<function name>}()
	{
		${0:{VISUAL}}
	}

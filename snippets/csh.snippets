# basic structure
snippet #! "shebang"
	#!/bin/csh

# basic syntax
snippet set "variable assignment"
	set ${1:<var>} = ${2:<value>}

snippet setenv "enviroenment variable assignment"
	setenv ${1:<var>} ${2:<value>}

snippet if "if control flow"
	if ( ${1:<condition>} )

		${0:${VISUAL}}

	endif

snippet foreach "foreach control flow"
	foreach ${1:<var>} ( ${2:<list>} )

		${0:${VISUAL}}

	end
